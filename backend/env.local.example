# Local Development Environment Configuration
# Copy this file to .env in the backend directory for local development

# Database Configuration (Local PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/moto_investment_local"

# JWT Configuration
JWT_SECRET="local-development-jwt-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=5000
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"

# Company Wallet Addresses (Optional for local development)
# You can use dummy addresses for local testing
BSC_WALLET_ADDRESS="0x1234567890123456789012345678901234567890"
POLYGON_WALLET_ADDRESS="0x1234567890123456789012345678901234567890"

# Blockchain API Keys (Optional for local development)
# You can use dummy keys for local testing
BSCSCAN_API_KEY="dummy-bscscan-api-key"
POLYGONSCAN_API_KEY="dummy-polygonscan-api-key"

# Token Contract Addresses (using defaults)
USDT_BEP20_CONTRACT="0x55d398326f99059fF775485246999027B3197955"
USDT_POLYGON_CONTRACT="0xc2132D05D31c914a87C6611C10748AEb04B58e8F"

# Coinbase Commerce (Optional for local development)
